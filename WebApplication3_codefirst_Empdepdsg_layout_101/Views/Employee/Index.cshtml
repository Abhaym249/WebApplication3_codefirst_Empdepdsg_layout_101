@model IEnumerable<WebApplication3_codefirst_Empdepdsg_layout_101.Models.Employee>
<h2 class="text-primary text-center"> </h2>
@Html.ActionLink("New Employee", "Upsert", "Employee", new { area = "" }, new { @class = "btn btn-primary" })
@if (!Model.Any())
{
    <p class="text-danger">NO DATA FOUND</p>
}
else
{ 
<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Salary</th>
        <th>Department</th>
        <th>Designation</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Name</td>
                <td>@employee.Address</td>
                <td>@employee.Salary</td>   
                <td>@employee.Department.Name</td>
                <td>@employee.Designation.Name</td>
                <td>
                    @Html.ActionLink("Edit", "Upsert", new { id = employee.Id, area = "" }, new { @class = "btn btn-success" })
                    @Html.ActionLink("Delete", "Delete", new { id = employee.Id, area = "" }, new { @class = "btn btn-danger" })
                    @Html.ActionLink("Details", "Details", new { id = employee.Id, area = "" }, new { @class = "btn btn-info" })
                </td>
            </tr>
        }
        </tbody>

</table>
}